{
  "printWidth": 100,
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": true,
  "arrowParens": "always",
  "trailingComma": "es5",
  "tabWidth": 2,
  "useTabs": false,
  "plugins": ["@ianvs/prettier-plugin-sort-imports"],
  "importOrderParserPlugins": ["typescript", "jsx"],
  "importOrder": [
    "^react$",
    "^next",
    "<THIRD_PARTY_MODULES>",
    "^@app/(.*)$",
    "^@modules/(.*)$",
    "^@components/(.*)$",
    "^@lib/(.*)$",
    "^@hooks/(.*)$",
    "^[./]"
  ]
}